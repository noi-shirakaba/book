<h1>書籍一覧</h1>
<%= form_with url: search_books_path, method: :get, local: true do |f| %>
  <%= f.text_field :content %>
  <%= f.submit :search %>
<% end %>
<% @book.each do |book| %>
  <div>
    <ul>
      <li><%= link_to book.title, book_path(book.id) %></li>
      <li><%= book.author %></li>
      <li><%= book.label %></li>
    </ul>
  </div>
<% end %>